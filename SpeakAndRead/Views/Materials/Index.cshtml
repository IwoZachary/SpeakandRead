@model IEnumerable<SpeakAndRead.Models.Material>

@{
    ViewData["Title"] = "Index";
}

<h1>Materials</h1>

@if (User.IsInRole("Admin") || User.IsInRole("Teacher")) { 
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MaterialName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MaterialName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Content)
                </td>
                <td>
                    @if (User.IsInRole("Admin") || User.IsInRole("Teacher"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.MaterialId">Edit</a>
                    }

                    | <a asp-action="Details" asp-route-id="@item.MaterialId">Details</a> |

                    @if (User.IsInRole("Admin") || User.IsInRole("Teacher"))
                    {
                        <a asp-action="Delete" asp-route-id="@item.MaterialId">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
